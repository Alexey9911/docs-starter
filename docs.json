{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "CryptoGuard",
  "colors": {
    "primary": "#00D9A6",
    "light": "#00F0B5",
    "dark": "#00A67E"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "dark"
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Blog",
        "href": "https://cryptoguard.ai/blog"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Install Extension",
      "href": "https://chrome.google.com/webstore/detail/cryptoguard"
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "ChainGPT",
          "icon": "link",
          "href": "https://www.chaingpt.org"
        },
        {
          "anchor": "Twitter",
          "icon": "x-twitter",
          "href": "https://x.com/CryptoGuardAI"
        },
        {
          "anchor": "Discord",
          "icon": "discord",
          "href": "https://discord.gg/chaingpt"
        },
        {
          "anchor": "Telegram",
          "icon": "telegram",
          "href": "https://t.me/chaingpt"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "rocket",
            "pages": [
              "index",
              "getting-started/quickstart",
              "getting-started/installation"
            ]
          },
          {
            "group": "Features",
            "icon": "shield",
            "pages": [
              "features/anti-phishing",
              "features/malware-detection",
              "features/risk-scoring",
              "features/transaction-analyzer",
              "features/wallet-security"
            ]
          },
          {
            "group": "Architecture",
            "icon": "microchip",
            "pages": [
              "architecture/overview",
              "architecture/ai-engine",
              "architecture/data-providers"
            ]
          },
          {
            "group": "Security",
            "icon": "lock",
            "pages": [
              "security/threat-detection",
              "security/privacy"
            ]
          },
          {
            "group": "Resources",
            "icon": "book",
            "pages": [
              "about/faq",
              "about/team",
              "about/roadmap"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "icon": "book-open",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/errors"
            ]
          },
          {
            "group": "Scan Endpoints",
            "icon": "magnifying-glass",
            "pages": [
