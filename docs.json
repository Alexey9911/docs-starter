            "pages": [
              "api-reference/risk/score",
              "api-reference/risk/report"
            ]
          },
          {
            "group": "Webhooks",
            "icon": "bell",
            "pages": [
              "api-reference/webhooks/events"
            ]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "SDK Reference",
            "icon": "code",
            "pages": [
              "sdk/javascript",
              "sdk/python",
              "sdk/cli"
            ]
          }
        ]
      }
    ]
