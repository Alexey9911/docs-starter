{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "ChainGuard",
  "colors": {
    "primary": "#22C978",
    "light": "#6FE3FF",
    "dark": "#0F8F66"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "dark"
  },
  "backgroundImage": "/images/bg-black.svg",
  "styles": [
    "/styles.css"
  ],
  "modeToggle": {
    "default": "dark",
    "isHidden": true
  },
  "logo": {
    "light": "/images/logo_black.png",
    "dark": "/images/logo_white.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Site",
        "href": "https://chainguard.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Install Extension",
      "href": "https://chrome.google.com/webstore/detail/chainguard"
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Site",
          "icon": "link",
          "href": "https://chainguard.dev"
        },
        {
          "anchor": "X",
          "icon": "x-twitter",
          "href": "https://x.com/chainguard"
        },
        {
          "anchor": "Telegram",
          "icon": "telegram",
          "href": "https://t.me/chainguard"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "getting-started/quickstart",
              "getting-started/installation"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/anti-phishing",
              "features/malware-detection",
              "features/risk-scoring",
              "features/transaction-analyzer",
              "features/wallet-security"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/overview",
              "architecture/ai-engine",
              "architecture/data-providers"
            ]
          },
          {
            "group": "Security",
            "pages": [
              "security/threat-detection",
              "security/privacy"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "about/faq",
              "about/team",
              "about/roadmap",
              "about/privacy-policy"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/errors"
            ]
          },
          {
            "group": "Scan Endpoints",
            "pages": [
              "api-reference/scan/url",
              "api-reference/scan/contract",
              "api-reference/scan/wallet",
              "api-reference/scan/transaction"
            ]
          },
          {
            "group": "Risk Analysis",
            "pages": [
              "api-reference/risk/score",
              "api-reference/risk/report"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/events"
            ]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "SDK Reference",
            "pages": [
              "sdk/javascript",
              "sdk/python",
              "sdk/cli"
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/chainguard",
      "telegram": "https://t.me/chainguard"
    }
  }
}
